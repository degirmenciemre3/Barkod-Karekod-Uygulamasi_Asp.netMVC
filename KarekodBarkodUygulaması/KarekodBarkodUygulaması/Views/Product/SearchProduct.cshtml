@{
    ViewData["Title"] = "Search Product Page";
}
@model ProductsViewModel

<div class="card-deck">
    @if (Model.Products.Count() != 0)
    {
        @foreach (var product in Model.Products)
        {

            <div class="card">
                <img class="card-img-top" src=@product.productImgUrl alt=@product.productName width="358" height="180">
                <div class="card-body">
                    <h3 class="card-title">@product.productName</h3>
                    <p class="card-text">Product Açıklama</p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Index" asp-route-productID=@product.productID>Detaylar</a>
                </div>
            </div>

        }
    }
    else
    {
        <div>Ürün Bulunmamakta</div>
    }
</div>